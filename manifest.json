{
  "manifest_version": 3,
  "name": "WordPress Article Search",
  "version": "1.0",
  "description": "Search for WordPress articles on Google.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
